<% provide(:title, 'create course') %>
<% provide(:page_title, "Create Course") %>
<% provide(:page_sub_title, "New Course") %>
<% provide(:page_icon, "iconfa-edit") %>

<% content_for :breadcrumbs do %>
<% if current_user.admin? %>
<li><%= link_to " Course Managerment ", admin_manage_course_path %> <span class="separator"></span></li>
<% else %>
<li><%= link_to " My Courses ", user_courses_path(current_user) %> <span class="separator"></span></li>
<% end %>
<%= content_tag(:li, "Create Course") %>
<% end %>

<% content_for :javascript do %>

<% end %>

