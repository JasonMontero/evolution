<% provide(:title, "positions management") %>
<% provide(:page_title, "Positions Management") %>
<% provide(:page_sub_title, "manage company positions") %>
<% provide(:page_icon, "iconfa-reorder") %>

<% content_for :breadcrumbs do %>
<%= content_tag(:li, "Positions Management") %>
<% end %>

<% content_for :javascript do %>
<script type="text/javascript">
</script>
<% end %>

<div class="row-fluid">
  <div id="dashboard-left" class="span8">

    <h3 class="subtitle">Position</h3>
    <div class="divider15"></div>
    <div class="widgetbox">
      <div class="headtitle">
        <h4 class="widgettitle"><span class="iconfa-reorder"></span> Positions</h4>
      </div>
      <% if @positions.size == 0 %>
      <div class="widgetcontent">
        <p>No Competency Model setup yet. please setup it first. </p>
      </div>
      <% else %>
      <table class="table table-bordered responsive">
        <thead>
          <tr>
            <th class="center">Action</th>
            <th class="center">Name</th>
            <th class="center">Description</th>
            <th class="center">Related Competency</th>
            <th class="center">Related Courses</th>
          </tr>
        </thead>
        <tbody>
          <% @positions.each do |p| %>
          <tr>
            <td class="center">
              <%= link_to "Delete", "#", {:class => "btn btn-danger disabled"} %>
              <%= link_to "Edit", edit_position_path(p), {:class => "btn btn-primary"} %>
            </td>
            <td class="center"><%= p.name %></td>
            <td class="center"><%= p.description %></td>
            <td class="" id="related-competency-level">
              <ul>
                <% p.competency_levels.each do |cl| %>
                <li><%= cl.competency.name + "（" + level_name(cl.level) + "）" %></li>
                <% end %>
              </ul>
            </td>
            <td class="" id="related-course">
              <ul>
                <% p.competency_levels.each do |cl| %>
                  <% cl.courses.each do |c| %>
                  <li><%= link_to c.title, course_path(c) %></li>
                  <% end %>
                <% end %>
              </ul>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>

  </div>

  <div id="dashboard-right" class="span4">
    <h3 class="subtitle">Manage Positions</h3>
    <div class="divider15"></div>
    <div class="well">
      <a href="#" class="btn btn-primary disabled"><i class="iconfa-plus icon-white"></i> Create New Position</a>
      <a href="<%= export_positions_path(format: "csv") %>" class="btn btn-warning"><i class="iconfa-download-alt icon-white"></i> Export As CSV</a>
    </div>

    <h4 class="widgettitle"> Import Position</h4>
    <div class="widgetcontent">
      <%= form_tag import_positions_path, multipart: true do %>
      <div class="fileupload fileupload-new" data-provides="fileupload">
        <div class="input-append">
          <div class="uneditable-input span2">
          <i class="iconfa-file fileupload-exists"></i>
          <span class="fileupload-preview"></span>
          </div>
          <span class="btn btn-file"><span class="fileupload-new">Select file</span>
          <span class="fileupload-exists">Change</span>
          <input class="file optional" id="file" name="file" type="file" /></span>
          <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
        </div>
      </div>
      <%= submit_tag "Import Positions".html_safe, :class => "btn btn-primary submit-import" %>
      <% end %>
    </div>
  </div>
</div> <!--row-fluid-->
