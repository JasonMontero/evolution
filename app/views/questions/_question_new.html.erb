<%= simple_form_for @question, :url => new_option_examination_questions_path(@exam.id), :method => :post, :html => {:class => 'form-horizontal'} do |f| %>  
  <%= f.input :question_type_str, :collection => [[:choice, "选择题"], [:judgement, "判断题"], [:dialogical, "简答题"]], :value_method =>:first, :label_method => :last, :label => "请选择题目类型：" %>
  <div class="form-actions">
  <%= f.button :submit, '下一步', :class => "btn-primary"  %>
  </div>
<% end %>